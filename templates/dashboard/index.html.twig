{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
{% set array = list %}
<div class="column">
    <div class="row big-gap flex-center big-margin">
        <div id="dbStats" class="dashboardBox column rounded shadow-all">
            <span class="bold">Statistiques globales</span>
            <span>Quantité d'objets : {{ count }}</span>
            <span>Objets légendaires : {{ legCount }}</span>
            <span>Objets épiques : {{ epiCount }}</span>
        </div>
        <div id="newestItems" class="column dashboardBox rounded shadow-all">
            <span class="center bold">Nouveaux items</span>
            <table>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Rareté</th>
                    <th>Type</th>
                    <th></th>
                </tr>
                {% for item in array %}
                <tr onclick="clickOnRow(self)">
                    <td class="arrayId">{{item.id}}</td>
                    <td class="arrayName">{{item.name}}</td>
                    <td class="arrayRarity">{{item.rarity}}</td>
                    <td class="arrayType">{{item.itemType}}</td>
                    <td><a href="http://localhost/symfony_projet/public/item/view/{{item.id}}">Voir l'objet</a></td>
                </tr>
                {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
